<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name -->
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />

  <!-- Description -->
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />

  <!-- URL Original -->
  <%= f.label :url_original %>
  <%= f.url_field :url_original %>
  <br />

  <!-- Country -->
  <%= f.label :country_id %>
  <%= f.collection_select :country_id, Country.all, :id, :name, include_blank: true %>
  <br />

  <!-- Category -->
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
  <br />


  <!-- Hidden fields: isActive -->
  <% if false %>
    <%= f.hidden_field :isActive, :value => 0 %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
