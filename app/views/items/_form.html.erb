<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <% if false %>
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2><% end %>

      <h2>Can't add your store:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name -->
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>
  <!-- <br /> -->

  <!-- Description -->
  <%= f.label :description, "Description:" %>
  <%= f.text_area :description %>
  <!-- <br /> -->

  <!-- URL Original -->
  <%= f.label :url_original, "URL:" %>
  <%= f.url_field :url_original %>
  <!-- <br /> -->

  <!-- Country -->
  <%= f.label :country_id, "Country:" %>
  <%= f.collection_select :country_id, Country.all.order("name asc"), :id, :name, include_blank: true %>
  <!-- <br /> -->

  <!-- Category -->
  <%= f.label :category_id, "Category:" %>
  <%= f.collection_select :category_id, Category.all.order("name asc"), :id, :name, include_blank: true %>
  <!-- <br /> -->


  <!-- Hidden fields: isActive -->
  <% if false %>
    <%= f.hidden_field :isActive, :value => 0 %>
  <% end %>

  <div class="large-5 large-centered columns">
    <%= f.submit "Add Store", :class => "postfix button" %>
  </div>
<% end %>
